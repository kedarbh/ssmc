---
import Logo from '../assets/logo.png';
import background from '../assets/background.svg';

---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<img src={Logo.src} width="100%" height="150" alt="Astro Homepage" />
			<h1>
				Coming Soon
			</h1>
			<p>
				We are working hard to get it ready.
			</p>
			<p class="social">Follow us on: <br /> <a href="https://www.facebook.com/ssmcchitwan/"><img src="./facebook.png" alt="facebook icon" width="48px" height="48px"></a></p>
			
		</section>
	</main>

	
</div>

<style>
	.social {
		margin-top: 20px;
		text-align: center;
		align-self: center;
	}

	#background {
		position: fixed;
		/* background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%); */
		/* background-image: linear-gradient(to top, #3f51b1 0%, #5a55ae 13%, #7b5fac 25%, #8f6aae 38%, #a86aa4 50%, #cc6b8e 62%, #f18271 75%, #f3a469 87%, #f7c978 100%); */
		/* background-image: linear-gradient(to right, #ff758c 0%, #ff7eb3 100%); */
		/* background-image: linear-gradient(to top, #5f72bd 0%, #9b23ea 100%); */
		/* background-image: linear-gradient(-60deg, #ff5858 0%, #f09819 100%); */
		background-image: linear-gradient(to top, #50cc7f 0%, #f5d100 100%);
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	h1 {
		font-size: 52px;
		margin-top: 0.25em;
	}
	


	p {
		color: #0c0d0e;
		font-size: 16px;
		font-style: italic;
		line-height: 24px;
		letter-spacing: -0.006em;
		margin: 0;
	}

	

	@media screen and (max-height: 368px) {
		#news {
			display: none;
		}
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		#links {
			flex-wrap: wrap;
		}

		#links a.button {
			padding: 14px 18px;
		}

		#news {
			right: 16px;
			left: 16px;
			bottom: 2.5rem;
			max-width: 100%;
		}

		h1 {
			line-height: 1.5;
		}
	}
</style>
